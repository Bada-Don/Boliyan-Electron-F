{
  "name": "boliyan-electron",
  "version": "1.0.0",
  "description": "Boliyan Transliteration Electron App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python app.py",
    "build": "cd frontend && npm run build",
    "build:electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && pip install -r requirements.txt"
  },
  "keywords": [
    "electron",
    "transliteration",
    "punjabi",
    "react",
    "python"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.boliyan.electron",
    "productName": "Boliyan Electron",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "frontend/dist/**/*",
      "backend/**/*",
      "!backend/venv/**/*",
      "!backend/__pycache__/**/*",
      "!backend/*.pyc"
    ],
    "extraResources": [
      {
        "from": "backend/checkpoints",
        "to": "checkpoints"
      },
      {
        "from": "backend/models",
        "to": "models"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "frontend/public/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "frontend/public/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "frontend/public/icon.png"
    }
  }
} 